<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
    <!-- 处理rpc Bean-->
    <bean id="rpcBeanProcessor" class="org.apache.dubbo.config.spring.DubboBeanProcessor"/>

    <!-- provider's application name, used for tracing dependency relationship -->
    <bean id ="dubbo" class="org.apache.dubbo.config.ApplicationConfig">
        <property name="name" value="demo-provider"></property>
        <property name="shutwait" value="2000"></property>
        <property name="monitor" ref="monitor" />
        <property name="providerConfig" ref="provider" />
        <property name="consumerConfig" ref="consumer" />
        <property name="registries">
            <list>
                <ref bean="registry" />
            </list>
        </property>
    </bean>
    <bean id="monitor" class="org.apache.dubbo.config.MonitorConfig">
    </bean>
    <bean id="registry" class="org.apache.dubbo.config.RegistryConfig">
        <property name="address" value="multicast://224.5.6.7:1234"></property>
        <property name="protocol" value="dubbo"></property>
        <property name="protocolConfig" ref="protocol"></property>
    </bean>
    <bean id="protocol" class="org.apache.dubbo.config.ProtocolConfig">
        <property name="name" value="dubbo"></property>
        <property name="port" value="20880"></property>
    </bean>
    <bean id="provider" class="org.apache.dubbo.config.ProviderConfig">
        <property name="port" value="20880"></property>
    </bean>
    <bean id="consumer" class="org.apache.dubbo.config.ConsumerConfig">
    </bean>

    <bean id="module" class="org.apache.dubbo.config.ModuleConfig">
        <property name="monitor" ref="monitor" />
        <property name="registries">
            <list>
                <ref bean="registry" />
            </list>
        </property>
    </bean>
    <!-- declare the service interface to be exported -->
    <bean id="demoService" class="org.apache.dubbo.config.ReferenceConfig">
        <property name="interface" value="org.apache.dubbo.demo.DemoService"></property>
        <property name="application" ref="dubbo"></property>

    </bean>


</beans>
